# ZSH & BASH Alias File
# This File contains alias' compatible with both the BASH & ZSH Shell.

# General:
alias cls="clear"

# Mounting / Unmounting Filesystems:
alias unmount="umount"

# Directory Related:
alias df="df -h"
alias du="du -h -d1"
alias dh="dirs -v"	# See .zshrc for more details on setting stack level.

## Making Directories:
alias makedir="mkdir -p"
alias md="mkdir -p"

## Removing Directories:
alias removedir="rmdir"
alias rd="rmdir"

## Removing Files:
alias remove="rm"

## Listing Directories:
alias list="ls -lap"
alias la="ls -lap"
alias dir="ls -lap"

# CPU Checking:
alias top="top -ocpu -R -F -s 2 -n30"
alias ps="ps -ax"
#alias ps="ps -ale"

# Maintenance:
alias updatedb="/usr/libexec/locate.updatedb"

# OS X Specific:
# Opening Apps from CLI
alias appopen="open -a"

## Wire Shark:
alias ethereal="open -a SharkLauncher.app"
alias wireshark="open -a SharkLauncher.app"

## Ettercap:
alias ettercapx="ettercap -G"

## Net Map:
#alias zenamp="open -a X11.app; sudo zenmap"

## X-Chat:
alias xchat="open -a X-Chat\ Aqua.app"

## VLC:
alias vlc="open -a VLC.app"

## UnRar:
alias unrarx="open -a UnRarX.app"
